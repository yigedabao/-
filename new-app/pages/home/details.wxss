/* pages/home/details.wxss */
.wrap{
  width: 100%;
  height: 100%;
  padding-bottom: 120rpx; 
}
.main{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  padding-top: 20rpx; 
}
.main .title{
  font-size: 40rpx;
  font-weight: 600
}
.main .text{
  margin-top: 40rpx; 
}
.inputbox{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background: #ededed;
  border-top: 1rpx solid #dedede; 
  line-height: 100rpx;
}
.comment{
  display: inline-block;
  width: 75%;
  height: 80rpx;
  background: white;
  border: 1rpx solid #dedede;
  border-radius: 50rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-top: 18rpx;
  margin-left: 40rpx;
}
text{
  width: 20%;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 30rpx;
  color: #c5c5c5;
}
.commentarea{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
}
.commentarea .name{
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 15rpx;
}
