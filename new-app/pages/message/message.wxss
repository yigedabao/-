/* pages/message/message.wxss */
.search_wrap{
  width: 100%;
  height: 100rpx;
  padding-top: 20rpx;
  background: #ededed;
}
.search-btn{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  right: -15rpx;
  top: 0;
  border: none;
  outline: none;
  background:#ededed; 
}
.search{
  width: 80%;
  height: 80rpx;
  background: white;
  margin: auto;
  position: relative;
  padding-left: 60rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}
icon{
  position: absolute;
  left: 20rpx;
  top: 16rpx;
}
.search-input{
  width: 100%;
  height: 80rpx;
  display: inline-block;
}
.nav{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #dedede;
}
.nav-border{
  width: 5rpx;
  height: 60%;
  margin-top: 3%;
  background: #dedede;
}
.nav-btn{
  width: 49%;
  text-align: center;
  font-size: 32rpx;
}
.nav-font-color{
  color: #489ffc;
}
.article-list{
  height: 200rpx;
  box-sizing: border-box;
  margin-left: 40rpx;
  padding-top: 25rpx;
  padding-right: 40rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  justify-content: left;
}
.article-list-img image{
  width: 150rpx;
  height: 150rpx;
}
.article-list-text{
  width: 100%;
  height: 150rpx;
  margin-left: 20rpx;
  overflow: hidden;
}
.article-list-text-tital{
  font-size: 30rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.article-list-text-content{
  font-size: 26rpx;
  margin-top: 10rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}